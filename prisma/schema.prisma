  // Mongo
  // id    String @id @default(auto()) @map("_id") @db.ObjectId
model contratar {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  Nombre String
  DNI BigInt @unique
  Telefono BigInt
  Calle String
  Numero BigInt
  Casa String?
  Plan BigInt
  Eliminado Boolean? @default(false)
}

model usuario {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  Email String @unique
  Password String
  Eliminado Boolean? @default(false)
}



