generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

// Esquemas

model contratar {
  id String @id @default(cuid())
  Nombre String
  DNI BigInt @unique
  Telefono BigInt
  Calle String
  Numero BigInt
  Casa String?
  Plan BigInt
}

